<%#
name: Power Action - SSH Default
snippet: false
template_inputs:
- name: action
  required: true
  input_type: user
  description: Action to perform on the service
  options: |-
    restart
    shutdown
  advanced: false
  value_type: plain
  hidden_value: false
model: JobTemplate
job_category: Power
description_format: "%{action} host"
provider_type: SSH
kind: job_template
%>

PATH="$PATH:/usr/sbin:/sbin"

echo <%= input('action') %> host && sleep 3
<%= case input('action')
      when 'restart'
        'shutdown -r +1'
      else
        'shutdown -h now'
      end %>
